block top
  include ../sections/header-contacts/index.pug  
block content
  include ../components/svg.pug
  section.section.contacts-links()
    .contacts-links__top
      a(href="#").link.active
        +svg('logo-agidel', 175, 93)
        +svg('map-r-bash', 175, 175)(class="map")
        h4.link__title АО «Салаватстекло»
      a(href="#").link 
        +svg('logo-volga', 175, 93)
        +svg('map-r-sar', 175, 175)(class="map")
