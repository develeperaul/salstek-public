include ../../components/svg.pug
section.section.history 
  .tabs
    .tabs__wrapper
      button.btn.active(data-target='history-1') АО «Салаватстекло»
      button.btn-round(data-target='history-2') АО «Саратовстройстекло»
  #history-1.tab-content.active
    h2.title История холдинга
    .history__content
      img(src=require("/assets/images/history.png"), alt="")
      .history__slider
        .swiper.other-slider
          .swiper-wrapper
            each val in [1, 2, 3, 4, 5]
              .swiper-slide
                .slide-content
                  h4.slide-content__title #{val}  1978 год
                  ul 
                    li Начало производства хрустальных изделий
                    li Реконструирована печь для варки хрустального стекла. Первые экспериментальные образцы посуды и люстр получены у 7 ноября 1978 г. 
                    li Освоен выпуск коврово-мозаичной плитки на вновь построенной второй линии 
                .img
                  img(src=require("/assets/images/test.jpg"), alt="")
          .swiper-pagination
          .prev
            .btn-fit
              +svg('back')
          .next
            .btn-fit
              +svg('forward')

  #history-2.tab-content
    h2.title История холдинга 2
    .history__content
      img(src=require("/assets/images/history.png"), alt="")
      .history__slider
        .swiper.other-slider
          .swiper-wrapper
            each val in [1, 2, 3, 4, 5]
              .swiper-slide
                .slide-content
                  h4.slide-content__title #{val}  1978 год
                  ul 
                    li Начало производства хрустальных изделий
                    li Реконструирована печь для варки хрустального стекла. Первые экспериментальные образцы посуды и люстр получены у 7 ноября 1978 г. 
                    li Освоен выпуск коврово-мозаичной плитки на вновь построенной второй линии 
                .img
                  img(src=require("/assets/images/test.jpg"), alt="")
          .swiper-pagination
          .prev
            .btn-fit
              +svg('back')
          .next
            .btn-fit
              +svg('forward')
