.modal(data-animate-open="fadeIn" data-animate-close="fadeOut" id="manager-modal" class="animate__faster")
  button.btn-fit.btn-close(data-target="manager-modal"  data-action="close") 
    +svg('close')
  .content 
    form#manager.content__wrapper.manager-form
      .content__top 
        button.btn-close(data-target="manager-modal" data-action="close" type='button')
          +svg('close')
        .content__top-text--content 
          .content__title Связаться с менеджером
          .content__text Оставьте контактные данные
        .form__content
          .fields
            +input('name-org','Название организации*')
            +input('name','Фамилия Имя Отчество*')
            +input('phone','Номер телефона*')(data-mask="+{7}(000)-000-00-00")
            +input('email','E-mail')
            +textarea('comment','Комментарий ...')
          p Отправляя форму, вы даёте своё согласие на обработку 
            a(href="#") персональных данных
      .content__bottom
        button.btn.btn-next(type='submit') Отправить
.modal(data-animate-open="fadeIn" data-animate-close="fadeOut" id="order-modal" class="animate__faster")
  button.btn-fit.btn-close(data-target="order-modal"  data-action="close") 
    +svg('close')
  .content 
    form#order.content__wrapper.stepper.ordering-samples-form
      .content__top 
        button.btn-close(data-target="order-modal" data-action="close" type='button')
          +svg('close')
        .content__top-text--content 
          .content__title проверьте комплектацию заказа
          .content__text Проверьте комплектацию заказа и заполните контактную формы для отправки образцов
        div 
          .progresses 
            .progresses__wrapper
              +progress('Проверка комплектации заказа')(class="active")
              +progress('Контакные данные')
          .stepper__content
            .stepper__content-slide
              h2.stepper__content-title Проверка комплектации заказа
              div#ordering
              template#ordering-elements
                .item-label
                  .item-label__head
                    +svg("cheks",16)
                  .item-label__body
                .item-child
                  .item-child__label
                  .item-child__btns
                    .item-quantity
                      +quantity()
                    .item-child__count
                    button(type='button').item-action
                      +svg('dots', 24)
                  .item-edit
                    +edit()
                  
                .item-parent
                  .item-parent__label
                    +svg("cheks",16)
                  .item-parent__btns
                    .item-quantity
                      +quantity()
                    
                    .item-parent__count
                    button(type='button').item-action
                      +svg('dots', 24)
                  .item-edit
                    +edit()


            .stepper__content-slide
                h2.stepper__content-title Оставьте контакные данные
                .form__content
                  .fields
                    +input('PROP1','Название организации*')
                    +input('PROP2','Фамилия Имя Отчество*')
                    +input('PROP3','Номер телефона*')(data-mask="+{7}(000)-000-00-00")
                    +input('PROP4','E-mail')
                    +input('PROP5','Адрес поставки*')
                    +textarea('PROP6','Комментарий ...')
                  p Отправляя форму, вы даёте своё согласие на обработку 
                    a(href="#") персональных данных
      .stepper__btns(data-step="first") 
        .content__bottom
          button.btn.btn-next(type='button') Продолжить
        //- .stepper__btns
        //-   button.btn.btn-back(type='button') Назад
      .stepper__btns
        .content__bottom
          button.btn.btn-back(type='button') Назад
          button.btn.btn-next(type='button') Продолжить
      .stepper__btns(data-step="last") 
        .content__bottom
          button.btn.btn-back(type='button') Назад
          button.btn(type='submit') Подтвердить заказ

