include ../svg.pug

mixin inputFixed(name, label, placeholder, type='text', afterIcon)
  .field-fixed
    label #{label}
    .field-fixed__input
      input(type=type, name=name, placeholder=placeholder)&attributes(attributes)
      .field-fixed__after
        if(afterIcon)
          +svg(afterIcon, 24)
        button(class='del' type='button') 
          +svg('close', 24)
    .field-fixed__error